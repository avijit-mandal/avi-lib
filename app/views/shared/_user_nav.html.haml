#user_nav{:style => " background-color: gold; text-align: right; overflow: auto;"}
  - if user_signed_in?
    %table{:style => "width: 100%"}
      %td{:style => "text-align: left; overflow: auto; width: 25%"}
        %b= link_to "Add new Book", new_book_path
      %td{:style => "text-align: right; overflow: auto; width: 50%"}
        - if current_user.user_profile.present?
          = link_to "Profile", user_profile_path(current_user.user_profile)
        - else
          = link_to "Add Details", new_user_profile_path(current_user.user_profile)
        = link_to "My Books", my_books_path
        = link_to "All Books", root_path
      %td{:style => "text-align: right; overflow: auto; width: 25%"}
        <img src=#{current_user.image.present? ? "#{current_user.image.name_url}" : nil}  style="width:40px;height:40px;">
        
        Hi #{current_user.first_name.capitalize} #{current_user.last_name.capitalize}! Not you?
        
        \#{link_to "Sign out", destroy_user_session_path, method: :DELETE}
  - else
    = link_to "Sign up", new_user_registration_path
    or
    \#{link_to "Sign in", new_user_session_path}