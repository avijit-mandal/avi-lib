<div style = "overflow: auto;" >

	<h1>User Details</h1>

	<%= form_for :user_profile, url: user_profile_index_path do|f| %>

		
		<p>
		    <%= f.label :profile_image, "Profile Image" %><br/><br/>
		    <%= f.file_field :profile_image %>
		</p>

		<p>
		    <%= f.label :phone_no, "Phone No" %><br/><br/>
		    <%= f.text_field :phone_no %>
		</p>

		<p>
			<%= f.label :date_of_birth, "Date of Birth" %><br/>
			<%= f.date_field :date_of_birth %>
		</p>

		<p>
		    <%= f.label :sex %> </br>
		    <%= f.radio_button(:sex, "male") %>
			<%= f.label :male %>
			<%= f.radio_button(:sex, "female") %>
			<%= f.label :female %>
		</p>

		<p>
		    <%= f.label :address %><br/>
		    <%= f.text_area :address %>
		</p>

		<p>
	    	<%= f.submit 'Save'%>
	 	</p>

	<%end%>
</div>