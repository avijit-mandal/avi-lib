<h1>Edit User Detail</h1>

<%= form_for :user_profile, url: user_profile_path(@user_profile), method: :patch do |f| %>
<p>
	    <%= f.label :first_name, "First Name" %>
	    <%= f.text_field :first_name %>
	</p>

	<p>
	    <%= f.label :last_name, "Last Name" %>
	    <%= f.text_field :last_name %>
	</p>

	<p>
	    <%= f.label :phone_no, "Phone No" %>
	    <%= f.text_field :phone_no %>
	</p>

	<p>
		<%= f.label :date_of_birth, "Date of Birth" %>
		<%= f.date_field :date_of_birth %>
	</p>

	<p>
	    <%= f.label :sex %> </br>
	    <%= f.radio_button(:sex, "male") %>
		<%= f.label :male %>
		<%= f.radio_button(:sex, "female") %>
		<%= f.label :female %>
	</p>

	<p>
	    <%= f.label :address %>
	    <%= f.text_area :address %>
	</p>

	<p>
    	<%= f.submit 'Save Changes'%>
 	</p>
<%end%>
 	
<p><%= link_to 'Back', user_profile_path %></p>