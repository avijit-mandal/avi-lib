%div{:style => "overflow: auto;"}
  = render partial: 'shared/subjects'
  #new_book{:style => "float: left; width: 70%; padding: 10px 0px 0px 20px; background-color: rgb(255, 255, 240); overflow: auto;"}
    %h1 Write your Book
    = form_for :book_content, url: book_book_content_index_path do |f|
      %p
        = f.label :chapter, "Chapter Name"
        %br/
        %br/
        = f.text_field :chapter
      %p
        = f.label :chapter_content, "Chapter Content"
        %br/
        = f.text_area :chapter_content, size: "100x20"
      = f.submit 'Add chapter'