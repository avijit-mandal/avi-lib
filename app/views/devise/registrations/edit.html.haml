%section#registration
  .container
    #heading.row.text-center
      #heading-text.animated.zoomInDown
        %h3.text-center Sign Up
    .border
    .row.text-center.main_content
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, validate: true) do |f|
        .form
          .input-group.margin-bottom-sm
            %span.input-group-addon
              %i.fa.fa-user.fa-fw
            = f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name'
          .input-group.margin-bottom-sm
            %span.input-group-addon
              %i.fa.fa-user.fa-fw
            = f.text_field :secret_name, autofocus: true, class: 'form-control', placeholder: 'Secret Name'
          .input-group.margin-bottom-sm
            %span.input-group-addon
              %i.fa.fa-envelope-o.fa-fw
            = f.email_field :email, class: 'form-control', placeholder: 'Email address'
          .input-group.margin-bottom-sm
            %span.input-group-addon
              %i.fa.fa-key.fa-fw
            = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'
          .input-group.margin-bottom-sm
            %span.input-group-addon
              %i.fa.fa-key.fa-fw
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password'
          %div
            .input-group.margin-bottom-sm.col-md-6
              %span.input-group-addon
                %i.fa.fa-birthday-cake.fa-fw
              = f.date_field :dob, class: 'form-control', placeholder: 'date_of_birth'
            .input-group.margin-bottom-sm.col-md-6
              %span.input-group-addon
                %i.fa.fa-venus-mars.fa-fw
              = f.select 'sex', [ ['---- Gender ----', ''], ['male', 'Male'], ['female', 'Female'], ['other', 'Other']], {}, { :class => 'form-control'}
        = f.submit "Update", class: 'btn btn-primary send'

