<div style= "overflow: auto;" > 
	<%= render partial: 'shared/subjects' %>
	<%= render partial: 'shared/books_by_subject' %>

	<div id = "books_per_subject" style="float: left; width: 66%; padding: 10px 0px 0px 20px; background-color: rgb(255, 255, 240); overflow: auto;">
		<h1><%= @book.title %></h1>
		<table>
		<td style= "width: 50%">
			<img src=<%= @book.cover_image_url%>  style="width:150px;height:150px;">
		</td>

		<td>

		<strong>Author:	</strong> <%= @book.author %><br/>

		<strong>Price:	</strong> $<%= @book.price %><br/>
		
		<strong>Subject:	</strong> <%= link_to @book.subject.name, subject_path(@book.subject.id) %><br/>

		<strong>Description:	</strong><%= @book.description %><br/>
		<strong>Created Date:	</strong> <%= @book.created_at %>



		<p><% user_signed_in? && if @book.user_id == current_user.id %>
				<b> <%= link_to 'Edit Book Details', :action => 'edit', :id => @book.id %></b>
				
				<b> <%= link_to 'Edit Book Content', new_book_book_content_path(@book) %></b>

				<b> <%= link_to "Delete Book", book_path(@book), method: :DELETE, :confirm => "Are you sure you want to delete this item?" %></b>
					<b><%= link_to 'Read', chapters_path(@book.id) %></b>
				
				<% else %>
					<b><%= link_to 'Read', chapters_path(@book.id) %></b>
				<%end%>				
			<%= link_to 'Back', book_index_path %>		
		</p>
	</td>
</table>

	</div>

</div>
