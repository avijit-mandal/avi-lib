<div style= "overflow: auto;" > 
	<%= render partial: 'shared/subjects' %>

	<div id = "books_per_subject" style="float: left; width: 70%; padding: 10px 0px 0px 20px; background-color: rgb(255, 255, 240); overflow: auto;">
		<h1><%= @book.title %></h1>

		<strong>Author:	</strong> <%= @book.author %><br/>

		<strong>Price:	</strong> $<%= @book.price %><br/>
		
		<strong>Subject:	</strong> <%= link_to @book.subject.name, subject_path(@book.subject.id) %><br/>

		<strong>Description:	</strong><%= @book.description %><br/>
		<strong>Created Date:	</strong> <%= @book.created_at %>



		<p><% user_signed_in? && if @book.user_id == current_user.id %>
				<b> <%= link_to 'Edit', :action => 'edit', :id => @book.id %></b>
				<b> <%= link_to "Delete", book_path(@book), method: :DELETE, :confirm => "Are you sure you want to delete this item?" %></b>
				<% else %>
					<b>Edit</b>
					<b>Delete</b>
				<%end%>				
			<%= link_to 'Back', book_index_path %>		
		</p>

	</div>

</div>
